{
  "name": "nftbrawl",
  "version": "0.0.1",
  "description": "NFT Brawl",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "check": "hardhat check",
    "test:light": "hardhat test",
    "test": "hardhat coverage --network hardhat",
    "deploy:hardhat": "hardhat run --network hardhat scripts/sw_deploy.js",
    "deploy:localhost": "hardhat run --network localhost scripts/sw_deploy.js",
    "deploy:sepolia": "hardhat run --network sepolia scripts/sw_deploy.js",
    "deploy:mainnet": "hardhat run --network mainnet scripts/sw_deploy.js",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:mainnet": "hardhat verify --network mainnet",
    "local-testnet": "hardhat node",
    "solhint": "solhint -f table contracts/**/*.sol",
    "prettier:solidity": "prettier --plugin=prettier-plugin-solidity --write contracts/**/*.sol",
    "prettier:js": "prettier --write scripts/**/*.js test/**/*.js"
  },
  "author": "@Maerlin",
  "license": "MIT",
  "homepage": "https://nftbrawl.com",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@limitbreak/creator-token-contracts": "^1.1.2",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "chai": "^4.3.10",
    "dotenv": "^16.3.1",
    "erc721a": "^4.2.3",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.2",
    "hardhat-gas-reporter": "^1.0.9",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.11",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5"
  }
}
